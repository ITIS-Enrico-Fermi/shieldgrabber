{
	"manifest_version": 2,
	"name": "ShieldGrabber",
	"version": "2.0",

	"description": "Firefox extension to grab Google Meet blue shield (host controls) before the meeting creator.",
	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},

	"browser_action": {
		"default_icon": "icons/icon.png",
		"default_title": "ShieldGrabber",
		"default_popup": "index.html"
	},

	"content_scripts": [
		{
			"matches": ["*://classroom.google.com/*"],
			"js": ["shieldgrabber.js"],
			"run_at": "document_idle"
		}
	],

	"background": {
		"scripts": ["background.js"]
	},
	
	"permissions": ["storage", "notifications", "webRequest", "*://classroom.google.com/*/querycourse*"],
	
	"options_ui": {
		"page": "options/options.html"
	},

	"browser_specific_settings": {
		"gecko" : {
			"id": "addon@shieldgrabber.com"
		}
	}
}

